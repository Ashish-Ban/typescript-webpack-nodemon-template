{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES2022",
    "baseUrl": "./",
    "moduleResolution": "node",
    // "typeRoots": [],   
    "outDir": "./dist",
    "sourceMap": true,
    "sourceRoot": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
}